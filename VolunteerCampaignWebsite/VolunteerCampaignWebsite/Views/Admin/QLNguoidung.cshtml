@using VolunteerCampaignWebsite.Models

@model ViewModel

@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Quản lý nhân viên</h3>
        </div>
    </div>

    <div class="clearfix"></div>
    <!-- First row -->
    <div class="row">
        <!-- Jobs information -->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Thông tin nhân viên</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="QLNguoidung" method="post">
                        @Html.AntiForgeryToken()
                        @ViewBag.ThongBao
                        <div class="form-group hidden">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="employeeID">
                                Mã số nhân viên 
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="employeeID" name="employeeID" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="employeeName">
                                Họ tên <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="employeeName" name="employeeName" required="required" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="employeeMail">
                                Chức vụ <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select id="positionSelect" name="positionSelect" class="form-control">
                                    <option disabled selected> -- Chọn chức vụ -- </option>
                                    @foreach (var item in Model.CHUCVU)
                                    {
                                        <option>@item.Ten</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="employeeMail">
                                Email <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="email" id="employeeMail" name="employeeMail" required="required" class="form-control col-md-7 col-xs-12" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="employeePhone">
                                SDT <span class="required">*</span>
                            </label>
                            <div class="col-md-2 col-sm-2 col-xs-12">
                                <input type="tel" id="employeePhone" name="employeePhone" class="form-control col-md-7 col-xs-12" data-inputmask="'mask' : '(999) 999-9999'" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="employeeUsername">
                                Tên đăng nhập <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="employeeUsername" name="employeeUsername" required="required" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="employeePassword">
                                Mật khẩu <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="employeePassword" name="employeePassword" required="required" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 right">
                                <button class="btn btn-primary " type="submit" value="Delete" name="submitButton" id="deleteBtn"> <i class="fa fa-trash-o"></i> Xóa</button>
                                <button class="btn btn-primary " type="submit" value="Edit" name="submitButton" id="editBtn"> <i class="fa fa-edit"></i> Sửa</button>
                                <button type="submit" class="btn btn-success" value="Add" name="submitButton" id="addBtn"> <i class="fa fa-plus"></i> Thêm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <!-- /Campaign information -->
        <!-- Actions panel -->
        <!-- /Action panel -->
    </div>
    <!-- /First row -->
    <!-- Second row -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Danh sách nhân viên</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left">
                        <div class="form-group">
                            <table id="DSNhanvien" class="table table-striped jambo_table" style="width:100%">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title hidden">Mã nhân viên</th>
                                        <th class="column-title">Họ tên</th>
                                        <th class="column-title">Chức vụ</th>
                                        <th class="column-title">Email</th>
                                        <th class="column-title">SDT</th>
                                        <th class="column-title">Username</th>
                                        <th class="column-title no-link last"><span class="nobr">Password</span></th>

                                    </tr>
                                </thead>

                                <tbody id="tblbody">
                                    @foreach (var item in Model.NHANVIEN)
                                    {
                                        <tr>
                                            <td class="hidden"> @Html.DisplayFor(modelItem => item.Id) </td>                   

                                            <td> @Html.DisplayFor(modelItem => item.Ten) </td>                   
                                            <td> @Html.DisplayFor(modelItem => Model.CHUCVU.Where(n => n.Id == item.IdChucVu).FirstOrDefault().Ten) </td>                                        
                                            <td> @Html.DisplayFor(modelItem => item.Mail) </td>
                                            <td> @Html.DisplayFor(modelItem => item.SDT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.UserName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Pwrd) </td>                                           
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /Second row -->
</div>

