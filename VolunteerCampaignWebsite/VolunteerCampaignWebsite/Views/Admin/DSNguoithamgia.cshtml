@using VolunteerCampaignWebsite.Models

@model Tuple< IEnumerable < VolunteerCampaignWebsite.Models.SINHVIEN >, IEnumerable<VolunteerCampaignWebsite.Models.GIANGVIEN>>

@{
    ViewBag.Title = "Danh sách người tham gia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="">

    <div class="clearfix"></div>
    <!-- First row -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="height:100%">
                <div class="x_title">
                    <h2>Danh sách người tham gia</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable-buttons" class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>Mã số</th>
                                <th>Tên</th>
                                <th>Chức vụ</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>SĐT</th>
                                <th>Lớp</th>
                                <th>Ngày vào đoàn</th>
                                <th>Điểm TB</th>
                                <th>Khoa</th>
                            </tr>
                        </thead>

                        <tbody>
                             @foreach (var item in Model.Item1)
                             {
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                    <td> @Html.DisplayFor(modelItem => item.Ten) </td>
                                    <td>Sinh viên</td>
                                    <td> @String.Format("{0:MMMM dd, yyyy}", item.NgaySinh) </td>
                                    <td> @Html.DisplayFor(modelItem => item.GioiTinh) </td>
                                    <td> @Html.DisplayFor(modelItem => item.SDT) </td>

                                    <td> @Html.DisplayFor(modelItem => item.Lop) </td>
                                    <td> @String.Format("{0:MMMM dd, yyyy}", item.NgayVaoDoan) </td>
                                    <td> @Html.DisplayFor(modelItem => item.DiemTB) </td>
                                    <td></td>
                                </tr>
                             }  
                            @foreach (var item in Model.Item2)
                            {
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                    <td> @Html.DisplayFor(modelItem => item.Ten) </td>
                                    <td>Giáo viên</td>
                                    <td> @String.Format("{0:MMMM dd, yyyy}", item.NgaySinh) </td>
                                    <td> @Html.DisplayFor(modelItem => item.GioiTinh) </td>
                                    <td> @Html.DisplayFor(modelItem => item.SDT) </td>

                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td> @Html.DisplayFor(modelItem => item.Khoa) </td>
                                </tr>                                     
                            }      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


