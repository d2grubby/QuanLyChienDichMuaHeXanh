@using VolunteerCampaignWebsite.Models

@model IEnumerable<VolunteerCampaignWebsite.Models.PHIEUTHANHTOAN>

@{
    ViewBag.Title = "Danh sách chi phí";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="">

    <div class="clearfix"></div>
    <!-- First row -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="height:100%">
                <div class="x_title">
                    <h2>Danh sách chi phí </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable-buttons" class="table table-striped table-bordered" width="100%_">
                        <thead>
                            <tr class="headings">
                                <th class="column-title">Mã số</th>
                                <th class="column-title">Mã chiến dịch</th>
                                <th class="column-title">Chi phí dự định</th>

                                <th class="column-title">Chi phí phát sinh</th>
                                <th class="column-title no-link last"><span class="nobr">Tổng chi phí</span></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                    <td> @Html.DisplayFor(modelItem => item.IdCD) </td>
                                    <td> @Html.DisplayFor(modelItem => item.ChiPhiDuDinh) VND </td>
                                    <td> @Html.DisplayFor(modelItem => item.CHiPhiPhatSinh) VND</td>
                                    <td> @Html.DisplayFor(modelItem => item.TongChiPhi) VND</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

